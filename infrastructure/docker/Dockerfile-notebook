FROM jupyter/base-notebook:python-3.7.12

USER root

RUN pip install qiskit~=0.36.0
RUN pip install qiskit-nature~=0.4.3

RUN mkdir /pylib
COPY ./client /pylib
RUN cd /pylib && pip install .

COPY ./docs/tutorials/ /home/jovyan/serverless/tutorials/
COPY ./docs/guides/ /home/jovyan/serverless/guides/

USER $NB_UID

ENV JUPYTER_ENABLE_LAB=no
